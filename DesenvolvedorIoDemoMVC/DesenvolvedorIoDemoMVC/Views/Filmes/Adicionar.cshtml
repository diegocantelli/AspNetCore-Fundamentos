@model  DesenvolvedorIoDemoMVC.Models.Filme

@{ 
    ViewData["title"] = "Adicionar novo filme";
}

<h1>@ViewData["title"]</h1>

<div class="row">
    <div class="col-md-4">
        @*ModelOnly -> irá retornar apenas os erros que foram validados na model*@
        <div asp-validation-summary="ModelOnly"></div>

        @*asp-action="Adicionar" -> Ao submeter o formulário, irá enviá-lo para o método Adicionar da controller de Filmes*@
        <form asp-action="Adicionar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                @*adicionando validação para o campo título*@
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avaliacao" class="control-label"></label>
                <input asp-for="Avaliacao" class="form-control" />
                <span asp-validation-for="Avaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ 
        // renderizando uma view que contém scripts em Jquery para validação de campos
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}